<%- include("partials/header"); %>
<div class="create-main">
    <h1>Create a New Writing Post</h1>
    <form action="/create-write" method="post">
        <div class="form-group">
            <label for="title">Title
            </label>
            <input type="text" required name="title" id="title">
        </div>
        <div class="form-group">
            <label for="author">Author
            </label>
            <input type="text" required name="author" id="author">
        </div>
        <div class="form-group">
            <label for="art">
                Post
            </label>
            <!-- <input type="file" required name="art" id="art"> -->
            <input type="text" required name="post" id="post" placeholder="Enter URL of write-up">
        </div>
        <button class="submit-btn" type="submit">Submit</button>
    </form>
</div>
<%- include("partials/footer"); %>